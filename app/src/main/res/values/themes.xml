<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KJAAero" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#33FFFFFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/ic_launcher_background</item>
        <item name="colorSecondaryVariant">@color/ic_launcher_background</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" >#9DA8CA</item>

